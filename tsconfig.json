{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/actions/*": [
        "./src/app/root/store/actions/*"
      ],
      "@app/effects/*": [
        "./src/app/root/store/effects/*"
      ],
      "@app/reducers/*": [
        "./src/app/root/store/reducers/*"
      ]
    }
  }
}
